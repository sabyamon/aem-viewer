{

	"name": "AEM Viewer",
	"version": "1.6",
	"manifest_version": 2,
	"description": "An Insider View of any Adobe AEM Hosted Page",
	"icons": {
		"128" : "icon.png"
	},
	"browser_action": {
		"default_title": "AEM Viewer",
  		"default_popup": "popup.html",
		"default_icon": "icon.png"
		
	},
	"background" : {
		"scripts":["background.js"]
	},
	"permissions": [
		"cookies",
		"tabs",
		"contextMenus",
		"http://*/*", "https://*/*"
	]

}
